<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_app_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.onlinecamera.activity.AppInfoActivity"
    android:background="@color/colorGreyDark">

    <include
        layout="@layout/toolbar_actionbar"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        app:srcCompat="@drawable/ic_sky_logo_loader_white"
        android:id="@+id/imageView2"
        android:layout_marginTop="83dp"
        android:layout_below="@+id/include"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        tools:ignore="ContentDescription,UnknownId,VectorDrawableCompat"
        android:contentDescription="" />

    <TextView
        android:text="получить мгновенный доступ к камерам"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:id="@+id/textView4"
        android:layout_below="@+id/textView3"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:textColor="@color/colorWhite"
        android:textSize="16sp" />

    <TextView
        android:text="всего мира с вашего телефона."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:id="@+id/textView5"
        android:layout_below="@+id/textView4"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4"
        android:textColor="@color/colorWhite"
        android:textSize="16sp" />

    <TextView
        android:text="Мобильное приложение"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:id="@+id/textView2"
        android:layout_below="@+id/imageView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:textColor="@color/colorWhite"
        android:textSize="16sp"
        android:layout_marginLeft="16dp" />

    <TextView
        android:text='"Онлайн-камеры" позволит вам'
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/textView2"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:textColor="@color/colorWhite"
        android:textSize="16sp" />

    <ImageView
        android:layout_width="24dp"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_public_orange_24x24"
        android:id="@+id/imageView4"
        android:layout_alignTop="@+id/textView6"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5"
        android:layout_marginTop="12dp"
        tools:ignore="VectorDrawableCompat" />

    <TextView
        android:text="eismailzada@gmail.com"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginTop="36dp"
        android:id="@+id/textView6"
        android:foregroundGravity="top|center"
        android:gravity="left|center"
        android:layout_below="@+id/textView5"
        android:layout_toRightOf="@+id/imageView4"
        android:layout_toEndOf="@+id/imageView4"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:textSize="16sp"
        android:textColor="@color/colorWhite" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_location_orange_24x24"
        android:id="@+id/imageView5"
        android:layout_below="@+id/textView6"
        android:layout_toLeftOf="@+id/textView6"
        android:layout_toStartOf="@+id/textView6"
        android:layout_marginTop="24dp"
        tools:ignore="VectorDrawableCompat" />

    <TextView
        android:text="Выполнил:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:layout_below="@+id/textView6"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignStart="@+id/textView6"
        android:layout_marginTop="16dp"
        android:textSize="16sp"
        android:textColor="@color/colorWhite" />

    <TextView
        android:text="Исмаилзада Эльнур"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView8"
        android:layout_below="@+id/textView7"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignStart="@+id/textView6"
        android:layout_marginTop="8dp"
        android:textSize="16sp"
        android:textColor="@color/colorWhite" />

</RelativeLayout>
