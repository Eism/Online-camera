<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_error"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.onlinecamera.activity.ErrorActivity"
    android:background="@color/colorGreyDark">

    <include
        layout="@layout/toolbar_actionbar"
        android:id="@+id/toolbal_actionbar" />

    <TextView
        android:text="Пожалуйта, повторите  попытку позже"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView9"
        android:textColor="@color/colorWhite"
        android:textSize="16sp"
        android:gravity="center"
        android:fontFamily="sans-serif" />

    <TextView
        android:text="или обратитесь к нам по телефону."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView9"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:id="@+id/textView10"
        android:textColor="@color/colorWhite"
        android:textSize="16sp"
        android:gravity="center"
        android:fontFamily="sans-serif" />

    <TextView
        android:text="К сожалению, произошла ошибка."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView9"
        android:id="@+id/textView11"
        android:layout_marginBottom="8dp"
        android:textColor="@color/colorWhite"
        android:textSize="16sp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:fontFamily="sans-serif" />

    <TextView
        android:text="Ошибка"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView11"
        android:layout_alignLeft="@+id/textView11"
        android:layout_alignStart="@+id/textView11"
        android:layout_marginBottom="16dp"
        android:id="@+id/textView12"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:fontFamily="sans-serif"
        android:textSize="24sp"
        android:layout_marginTop="16dp" />

    <TextView
        android:text="+7 (952) 114-26-09"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_below="@+id/textView10"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:id="@+id/textView13"
        android:gravity="center"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp"
        android:fontFamily="sans-serif" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="125dp"
        app:srcCompat="@drawable/ic_sky_error_bg"
        android:id="@+id/imageError"
        tools:ignore="VectorDrawableCompat"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
